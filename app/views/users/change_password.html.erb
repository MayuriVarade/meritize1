	<%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>

	<div id="info">
	<div class="container" style="margin-bottom:100px">

      	<%= form_for :change_password,:html =>{:id =>"change-password",:autocomplete => "off"} do |f|  %>		
      <div class="row"></div>
      <h2>Change password</h2>
      <p>Make sure the new one has a mix of letters &amp; numbers and is at least 6 characters long. We'll give you feedback as you type a new password.</p>
      <div class="row">
   
        <div class="col-md-6">
          <div class="form-group">
            <label class="control-label">Current password</label>
            <div class="controls">
            	<%= f.password_field :old_password ,:class=>"form-control", :autocomplete => :off, autofocus: true %>	
              <% if flash[:error] == "Old password incorrect" %>
                <div style="color:red">The old password is not the right one. Try again!</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="control-label">New password</label>
            <div class="controls">
              
              <%= f.password_field :new_password,:class=>"form-control" %>
             <span id="passstrength" class="help-block">
            </div>
          </div>

          <div class="form-group">
          <label class="control-label">New password - type it in one more time</label>
          <%= f.password_field :new_password_confirmation,:class=>"form-control" %>
          <% if flash[:error] == "New password mismatch" %>
            <div style="color:red">The password does not match. Try again!</div>
          <% end %>
         
        </div>
        </div>
       
      </div>
       <%= f.submit 'Change password',:class=> "button button-primary"%>
       
    
      <% end %>
    </div>
</div>
<% flash[:error] == '' %>
