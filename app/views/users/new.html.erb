 <!-- SignUp page -->
     <%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>
    <%= form_for @user ,:html => {:multipart => true,:id =>"new_user",:class=>"form-horizontal" } do |f| %>
   
        <% if signed_in?%>
          
                 
           <%= render :partial => 'users/add_adminuser',:locals => {:f => f} ,:layout => 'layouts/profile' %>



        <% else %>  
          
       <body id="signup">
        <div class="container">

          <div class="row header">
            <div class="col-md-12">
              <h3 class="logo">
                  <a href="/">Meritize</a>
              </h3>
              <h4>Set up your new account today.</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="wrapper clearfix">
                <div class="formy">
                  <div class="row">
                    
                    <div class="col-md-12">
                  
                        <section class="round">
                          <% flash.each do |key, value| %>
                              <div class="flash <%= key %>", style= "margin-left:-15px;margin-bottom:20px;color:#6ED5E4"><%= value %></div>
                         <% end %>
                         <%= render 'shared/error_messages', :object => f.object %>
                      </section> 

                          
                         

                           <div class="form-group">

                            <label for="name">First name </label><span class="star">*</span>
                             <%= f.text_field :firstname, :class => "form-control" %>
                         </div>
                             <div class="form-group">

                            <label for="name">Last name</label><span class="star">*</span>
                             <%= f.text_field :lastname, :class => "form-control" %>
                          </div>
                          <div class="form-group">
                            <label for="email">Email address</label><span class="star">*</span>
                             <%= f.text_field :email, :class => "form-control"  %>
                           </div>

                                <div class="form-group">
                            <label for="name">Company name</label><span class="star">*</span>
                            <%= f.text_field :companyname, :class => "form-control" %>
                            

                          </div>
                          <div class="form-group">
                            <label for="name">How did you hear About Us?</label>
                                  Â 
                                   <%= f.select :hear_aboutus, options_for_select([["Select One", ""], "From a Friend", "Google search", "Other search engine","Facebook","Twitter","LinkedIn","Blog" ]), {}, { :class => 'form-control' } %>
                                  <!-- <%= f.text_area :hear_aboutus ,:rows =>'4',:columns => '3', :class => "form-control"  %> -->

                               </div>
                                
                                <div class="form-group">
                            <label for="plan_name">Plan</label>
                            
                             <%= f.select :plan_name, options_for_select([["Alloy", ""],"Award", "Applaud"]), {}, { :class => 'form-control' } %>
                             
                            
                               </div>


                          <div class = "field">
                             <%= hidden_field_tag "user[role_ids][]", 2 %>
                             <%= f.hidden_field :plan_id, :value => 3%>
                             <%= f.hidden_field :plan_type, :value => "free"%>
                             <%= f.hidden_field :password ,:value => @random %>
                             <%= f.hidden_field :password_confirmation ,:value => @random %>
                            

                
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> You have read &amp; agree to the 
                                <a href="#">Terms of service</a>.
                            </label>
                          </div>
                        
                         <div class="already-account" style="margin-bottom:0">
                            Already have an account?

                            <%= link_to "Sign In", signin_path %>
                

                          </div>
                           <div class="submit">

                            <%= f.submit "Create my account", :class =>"button-clear"  %>
                          </div>
                         
                          <% end %>
                         <% end %>
                          
                     
                    </div>
                  </div>            
                </div>
              </div>
             
            </div>
          </div>
        </div>
</body>
