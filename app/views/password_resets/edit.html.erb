
<%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>


<div class="container">
      <div class="row header">
        <div class="col-md-8 message">
          <h3>Forgot Password ? </h3>
                    

           <%= form_for @user, :url => password_reset_path(params[:id]),:html =>{:id =>"forgot-form"} do |f| %>

            <% if @user.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %> 
            <div class="form-group">
              <h2>Please Enter The Recieved Temoprary Password Below</h2>
                <label for="name">Password</label>
                
                  <%= f.password_field :password ,:class=> "form-control"%>
              </div>
               <div class="form-group">
                <label for="name">Password confirmation</label>
                
                  <%= f.password_field :password_confirmation ,:class=> "form-control"%>
              </div>
              
              
              <div class="submit">
                <%= f.submit "Update Password",:class=>"button button-small" %>
              
              </div>
          <% end %>
        </div>
        
      </div>
 </div>
