<div class="media">
  <% @prop_displays.each do |prop_display| %>
      <div class="media-body">
        <h4 class="media-heading text-left"><%= prop_display.receiver.fullname rescue nil %></h4>

        <p><i><%= prop_display.description rescue nil%>.</i></p>

       <div class="like"><%= link_to (image_tag "like.png"),like_prop_prop_displays_path(:id =>prop_display.id),:method => "post",:remote => true,:id => "like_prop"%></div>

       <div class="like_count" id="like_count_<%=prop_display.id %>" val= "<%=prop_display.id %>"><%= Like.where(:likeable_type=>"PropDisplay",:likeable_id=>prop_display.id).sum(:count)%></div>
         </br>

<%# if Like.where(:likeable_type=>"PropDisplay",:likeable_id=>prop_display.id).sum(:count) >= 1
 %>
  <%= link_to "Showlike", like_count_prop_displays_path(:id =>prop_display.id), :id=>"like_count",:method => "get",:remote=> true  %>
    <%# end %>

        <p class="text-right " style="width:auto"><i class="fa fa-thumbs-up">&nbsp; <i class="fa fa-mail-reply"></i>&nbsp;&nbsp;</i>&nbsp;<%= custom_time(prop_display) %>&nbsp;by&nbsp; <%= prop_display.sender.fullname rescue nil %> </p>
      </div>
  <% end %>
</div>
