
<div id="info">
    <div class="container" style="margin-bottom:100px">
      <div class="jumbotron">
        <p>The best part of your job. See who is winning, who is voting and pick the winner.</p>
      </div>
     
        <div class="form-group">
          <label class="control-label">For voting period</label>
          <%= form_for :result do |f| %>
          <div class="controls">
            <%= f.select(:cycle, PropCycle.find(:all, :conditions=>"user_id = '#{current_user.id}'",:order => "created_at DESC").collect {|p| [ (p.start_cycle.strftime("%d %B %Y").to_s  + " to " +  p.end_cycle.strftime("%d %B %Y").to_s ).presence, p.id ] }, { :include_blank => "Current cycle #{@prop_setting.start_cycle.to_date} to  #{@prop_setting.end_cycle.to_date} ", :selected => "#{params[:result][:cycle] if request.post?}"}, {:class=>"form-control"}) %>
            
             <%= f.submit "Search", :class=> "btn btn-primary",:style=>"background-color: #006DCC; float:right; margin-right:7px"%>
          </div><br>
          <% end %>
        </div>
          
      <h1>Leaderboard - by number of props</h1>
      
        <table class="table table-hover table-bordered table-responsive table-condensed">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Department</th>
              <th>Props</th>
              
            </tr>
          </thead>
          <tbody>
                <% if @result.present? %>
                        <% @result.each_with_index do |result,i| %>
                          <tr>
                            <td><%= i = i + 1 %></td>
                            <td><%= result.receiver.fullname %></td>
                            <td><%= result.receiver.email %></td>
                            <td><%= result.receiver.department %></td>
                             <td><%= result.prop_count %></td>
                          </tr>
                     
                        <% end %>
                <% end %>    
          </tbody>

        </table>

<% if @prop_setting.assign_points == true %>
     <h1>Leaderboard - by number of points on props</h1>
      
        <table class="table table-hover table-bordered table-responsive table-condensed">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Department</th>
              <th>Points</th>
              
            </tr>
          </thead>
          <tbody>
              <% if @result_by_points.present? %>
                      <% @result_by_points.each_with_index do |result,i| %>
                        <tr>
                          <td><%= i = i + 1 %></td>
                          <td><%= result.receiver.fullname %></td>
                          <td><%= result.receiver.email %></td>
                          <td><%= result.receiver.department %></td>
                           <td><%= result.points %></td>
                        </tr>
                   
                      <% end %>
              <% end %>    
          </tbody>

        </table> 
<% end %>
     
      
      
      
    </div>
  
  </div>












