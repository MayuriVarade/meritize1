<h1>Listing settings</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>Website address</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


  <tr>
    <td><%= @settings.company_name rescue nil%></td>
    <td><%= image_tag @settings.photo.url(:small) %></td>
    <td><%= @settings.website_address rescue nil%></td>
    <td><%= @settings.description rescue nil%></td>
    
    <% unless @settings.nil?%>
    <td><%= link_to 'Show', @settings %></td><br/>
    <td><%= link_to 'Edit', edit_setting_path(@settings) %></td>
    <% end %>
  </tr>

</table>

<br />
<% if @settings.nil?%>
  <%= link_to 'New Setting', new_setting_path %>
<% end %>