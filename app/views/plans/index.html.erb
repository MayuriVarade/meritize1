                             <th></th>
                          </tr>
                           </thead>
                     <tbody>
          	<% @plans.each do |plan| %>

         
            <tr>
                   <td><%= plan.name %></td>
                   <td><%= plan.price %></td>
                   <td><%= plan.description1 %></td>
                   <td><%= plan.description2 %></td>
                   <td><%= plan.description3 %></td>
                   <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
