<!-- Select Plan From This Page -->
<div id="masthead">
	
	<div class="container">
		
		<div class="masthead-pad">
			
			<div class="masthead-text">
				<h2>Plan</h2>
				
			</div> <!-- /.masthead-text -->
			
		</div>
		
	</div> <!-- /.container -->	
	
</div> <!-- /#masthead -->




<div id="content">

	<div class="container">
		
		
		<div class="row" >
			
			<div class="span12" style="margin-left:150px">
				
				
				<div class="pricing-plans plans-4">
					 <% if current_user.role? :productmanager %> 
					<div id="content">

	                    <div class="container">
      
                       <table class="table table-bordered table-striped table-highlight">
                            <thead>
                           <tr>
                             <th>Name</th>
                             <th>price</th>
                             <th>For User</th>
                             <th>For Admin</th>
                             <th>Active User Price Description</th>
                             <th></th>
                             <th></th>
                          </tr>
                           </thead>
                     <tbody>
          	<% @plans.each do |plan| %>

         
            <tr>
                   <td><%= plan.name %></td>
                   <td><%= plan.price %></td>
                   <td><%= plan.description1 %></td>
                   <td><%= plan.description2 %></td>
                   <td><%= plan.description3 %></td>
                   <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
                   <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
                <% end %>
         
          </tbody>
        </table>
      </div> <!-- /.container -->

</div> <!-- /#content -->

</div> <!-- /#wrapper -->

			<% else current_user.role? :admin%>
                      	
				
				    <div class="plan-container">
				        <div class="plan">
					        <div class="plan-header">
				                
					        	
				                
					            <div class="plan-price">
				                	Applaud<span class="term">&nbsp;</span>
								</div> <!-- /plan-price -->
								
					        </div> <!-- /plan-header -->       
					        
					        <div class="plan-features">
							<ul>	  <% a = @plans[0]%> 			
									<li><%= a.description1 %></li>
									<li><%= a.description2 %></li>
									<li><%= a.description3 %></li>
									     
							</ul>
							</div> <!-- /plan-features -->
							
									<div class="plan-actions">	
							     <% a = @plans[0]%> 
                                   <% @subscription = a.subscriptions.build %>
							  <%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), paypal_checkout_path(plan_id: @subscription.plan_id, user_id: current_user.id), :class =>"btn" %>		
							
							</div>  
							<!-- /plan-actions -->
				
						</div> <!-- /plan -->
				    </div> <!-- /plan-container -->
				    
				    <div class="plan-container best-value">

				        <div class="plan">
					        <div class="plan-header">
				                
					        	
				                
					            <div class="plan-price">
				                	Award<span class="term">&nbsp;</span>
								</div> <!-- /plan-price -->
								
					        </div> <!-- /plan-header -->	          
					        
					        <div class="plan-features", style="padding-bottom: 4.5em;">
								<ul>	 <% a = @plans[1]%> 				
									<li><%= a.description1 %></li>
									<li><%= a.description2 %></li>
									<li><%= a.description3 %></li>
								
								</ul>
							</div> <!-- /plan-features -->
							
							<div class="plan-actions">	
							     <% a = @plans[1]%> 
                                   <% @subscription = a.subscriptions.build %>
							  <%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), paypal_checkout_path(plan_id: @subscription.plan_id, user_id: current_user.id), :class =>"btn" %>		
							
							</div> <!-- /plan-actions -->
				
						</div> <!-- /plan -->
				    </div> <!-- /plan-container -->
				    
				    <div class="plan-container">
				        <div class="plan">
				 
					        <div class="plan-header">
				                
					        	
				                
					            <div class="plan-price">
				                Alloy<span class="term">&nbsp;</span>
								</div> <!-- /plan-price -->
								
					        </div> <!-- /plan-header -->	       
					        
					        <div class="plan-features", style="padding-bottom: 8em;">
								<ul>	 <% a = @plans[2]%> 
									<li><%= a.description1%></li>
									<li><%= a.description2 %></li>
									<li><%= a.description3 %></li>
									
							    </ul>
							</div> <!-- /plan-features -->
							
							<div class="plan-actions">
								<%# raise @plans.inspect%>
							   	       
							   	        <% a = @plans[2]%> 
                                   <% @subscription = a.subscriptions.build %>
							  <%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), paypal_checkout_path(plan_id: @subscription.plan_id, user_id: current_user.id), :class =>"btn" %>		
					
								  			
							</div> <!-- /plan-actions -->
				   
						</div> <!-- /plan -->
						
				    </div> <!-- /plan-container -->
				   <% end %>

				</div>
				
			</div> <!-- /.span12 -->
			
		</div> <!-- /.row -->
		
		
	</div> <!-- /.container -->

</div> <!-- /#content -->

</div> <!-- /#wrapper -->










<script>

$(function () {
	
	Theme.init ();
	
});

</script>

</body>
</html>

