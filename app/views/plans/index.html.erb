            </tr>
                <% end %>
         
          </tbody>
        </table>
      </div> <!-- /.container -->

</div> <!-- /#content -->

</div> <!-- /#wrapper -->




			<% elsif current_user.role? :admin%>
                      	
				
				    <body>
	<div id="content">

		<div class="price-chart">
			
			<div class="pt-table">	
				<div class="pt-body">
					<ul class="pt-rows">
				  <% @plans.each do |plan| %>
				  	 <% if @subscription.nil? %>

						<li class="title"><%= plan.name %></li>
							
						<li class="fees"><%= plan.description1 %></li>
						<li class="fees"><%= plan.description2 %></li>
						<li class="fees"><%= plan.description3 %></li>	
											
						<li>
						<span class="pt-no">							
						<% @subscription = plan.subscriptions.build %>
						<%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), paypal_checkout_path(plan_id: @subscription.plan_id) %>
						</span>

                       <% else %>

                         <li class="title"><%= plan.name %></li>
						
						<li class="fees"><%= plan.description1 %></li>
						<li class="fees"><%= plan.description2 %></li>
						<li class="fees"><%= plan.description3 %></li>	
											
						<li>
						<span class="pt-no">							
						<% subscription = plan.subscriptions.build %>
						<% if @subscription.plan_id == plan.id%>
						Current Plan 
						<% else %>
						<%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), paypal_checkout_path(plan_id: subscription.plan_id) %>
						<% end %>
						</span>

                      
					<% end %>
				<% end %>
						</li>
						
					</ul>
				</div>
				
			</div>
		</div>
		
</div>
