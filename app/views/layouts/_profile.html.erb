			<ul class="nav" id="primary-nav">
				
                    <li><a href="#"><i class="nav-icon-9"></i><span>Props</span></a></li>
					<li><a href="#"><i class="nav-icon-10"></i><span>Vote</span></a></li>
					<li><a href="#"><i class="nav-icon-11"></i><span>WoW</span></a></li>
					<li><a href="#"><i class="nav-icon-12"></i><span>Nominees</span></a></li>
					<li><a href="#"><i class="nav-icon-13"></i><span>Results</span></a></li>
					<% if current_user.role? :admin %>

					<li><%= link_to admin_user_path do %>
  						<i class="nav-icon-14"></i><span>Manage Users</span></a>
					<% end %>
					<% end %>
					</li>
                     	<li><%= link_to adminuser_logs_path do %>
  						<i class="nav-icon-14"></i><span>Users Activities</span></a>
					<% end %>
					</li>
					   


					    <li class="dropdown"><a data-toggle="dropdown" href="#"><i class="nav-icon-15"></i><span>Setting</span></a>
                        <ul class="dropdown-menu">
                        	<% @setting_count = Setting.find_all_by_user_id(current_user.id) rescue nil %>
                       <% if @setting_count.count < 1 %>
                          <li><%= link_to new_setting_path do %>
  						         <i class="nav-icon-14"></i><span>General</span></a>
					            <% end %>
					            </li>
                        <% else %>
                           <li><%= link_to edit_setting_path(@setting_count) do %>
  						         <i class="nav-icon-14"></i><span>General</span></a>
					            <% end %>
					            </li>
                        <% end %>
                            
                            <li><a href="#">Props</a></li>
                              <% @voting_count = VoteSetting.find_all_by_user_id(current_user.id) rescue nil %>
                             
                            <% if @voting_count.count < 1 %>
		                          <li><%= link_to new_vote_setting_path do %>
		  						         <i class="nav-icon-14"></i><span>Vote</span></a>
							            <% end %>
							            </li>
                        	<% else %>
		                           <li><%= link_to edit_vote_setting_path(@voting_count) do %>
		  						         <i class="nav-icon-14"></i><span>Vote</span></a>
							            <% end %>
							            </li>
                        	<% end %>
                        </ul>
                    </li>
					
					
					<li class="dropdown"><a data-toggle="dropdown" href="#"><i class="nav-icon-16"></i><span>Billing</span></a>
					
                        <ul class="dropdown-menu">
                        	<li><%=link_to "Plan",plans_path%></li>
                            
                           
                            <li><%=link_to "History",history_path%></li>
                        </ul>
                    </li>
					
					 

					 <% if current_user.role? :productmanager %>
					<li> 
					 <%= link_to plans_path do %>
  						<i class="nav-icon-14"></i><span>Manage Plans</span></a>
					<% end %>
					</li>

					<li> 
						<% @trial_days = TrialDay.first %>
					 <%= link_to edit_trial_day_path(@trial_days) do %>
  						<i class="nav-icon-14"></i><span>Manage Trial days</span></a>
					<% end %>
					</li>
						<% end %>
                 
          </ul>
				
				
				
				<ul class="nav pull-right" id="secondary-nav">

                    <li class="dropdown">
                         <% if current_user.role? :productmanager %>	
                    	<a data-toggle="dropdown" href="#"><i class="icon-cog icon-white">
                    </i><span><%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></span></a>
                    <% elsif current_user.role? :admin %>
                    <a data-toggle="dropdown" href="#"><i class="icon-cog icon-white">
                    </i><span><%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></span></a>
                    <% else %>
                    <a data-toggle="dropdown" href="#"><i class="icon-cog icon-white">
                    </i><span><%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></span></span></a>
                     <% end %>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'Profile', current_user %></li>
                            <li><%= link_to 'change password', change_password_path%></li>
                        </ul>
                    </li>
                     <li><%= link_to  signout_path, :method => :delete do  %>
                    	<i class="icon-off icon-white"></i>Logout
                    	<% end %>
                    </li>    
                </ul>

               
         
			
  		</div>
	</header>


<%= yield%>

<%= render "shared/profile_footer"%>
		

</body>
</html>